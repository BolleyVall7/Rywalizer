{
    "settings": {
        "ecmascript": 6
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jquery": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "rules": {
        "prefer-arrow-callback": 1,
        "semi": 1,
        "strict": 0,
        "indent": [2, 4],
        "no-undef": 2,
        "react/jsx-no-undef": 2,
        "quotes": [1, "single"],
        "no-multiple-empty-lines": [1, {"max": 1, "maxEOF": 0}],
        "no-multi-spaces": [1, { "exceptions": {"VariableDeclarator": true,"FunctionExpression": true}}],
        "key-spacing": [0, { "align": "value"}],
        "no-underscore-dangle": 0
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["node_modules/**/*", "public/**/*"]
}