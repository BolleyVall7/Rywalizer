{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "jsx": "react",
        "target": "es2018",
        "paths": {
            "@/*": [
                "resources/assets/*"
            ]
        }
    }
}